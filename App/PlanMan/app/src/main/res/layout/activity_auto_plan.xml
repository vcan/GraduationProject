<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zszdevelop.planman.activity.AutoPlanActivity">

        <include layout="@layout/toolbar" />


        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/default_distance"

            android:text="选择想要的类型自动生成计划吧" />

        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_distance"
            android:text="达成效果:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_line_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="线条型男" />

            <TextView
                android:id="@+id/tv_muscle_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="肌肉型男" />
        </LinearLayout>

        <TextView
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_distance"
            android:padding="@dimen/default_distance"
            android:text="按部位划分:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weight_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="体重" />

            <TextView
                android:id="@+id/tv_chest_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="胸围" />

            <TextView
                android:id="@+id/tv_loin_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="腰围" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_distance"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_arm_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="左臂围" />

            <TextView
                android:id="@+id/tv_right_arm_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="右臂围" />

            <TextView
                android:id="@+id/tv_shoulder_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="肩宽" />
        </LinearLayout>

        <TextView

            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_distance"
            android:padding="@dimen/default_distance"
            android:text="手动添加计划:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_distance"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_manual_figure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/ic_light_person"
                android:gravity="center_horizontal"
                android:text="手动添加" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />


        </LinearLayout>

    </LinearLayout>

    <!-- Drawer -->
    <include layout="@layout/navigation_view" />

</android.support.v4.widget.DrawerLayout>